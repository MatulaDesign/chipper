{
  "name": "@lumberyard/chipper",
  "version": "1.0.0",
  "description": "A minimalistic state-management tool for your React needs",
  "author": "Mat Sas",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "state",
    "react-native",
    "state-management",
    "typescript"
  ],
  "main": "dist/index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "build": "rollup -c",
    "start": "rollup -c -w",
    "test": "jest"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://%40MatulaDesign@github.com/MatulaDesign/chipper.git"
  },
  "bugs": {
    "url": "https://github.com/MatulaDesign/chipper/issues"
  },
  "homepage": "https://github.com/MatulaDesign/chipper#readme",
  "devDependencies": {
    "@testing-library/react-hooks": "^5.0.2",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "babel-core": "^6.26.3",
    "babel-runtime": "^6.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "immer": "^8.0.1",
    "jest": "^26.6.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rollup": "^2.38.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "immer": ">= 7.0.0",
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  }
}
